<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DevicesActivity"
    android:id="@+id/stub_rel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/weird_dreams_6">

        <ImageView
            android:id="@+id/deviceImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="name"
                android:textSize="22dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/nomeStanza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="name"
                android:textSize="16dp"
                android:background="@color/weird_dreams_2"
                android:textColor="@color/white"
                android:padding="3dp"
                />

        </LinearLayout>

        <Switch
            android:id="@+id/switchComando"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill_horizontal"
            android:scaleX="1"
            android:scaleY="1"
            />
    </LinearLayout>

</RelativeLayout>