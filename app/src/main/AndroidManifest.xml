<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iot_application.iothink_unina">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_iothink"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_iothink_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.iot_application.iothink_unina.activities.InitActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iot_application.iothink_unina.activities.LoginActivity"
            android:label="IoThink">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iot_application.iothink_unina.activities.DevicesActivity"
            android:label="Lista Dispositivi" />
        <activity
            android:name="com.iot_application.iothink_unina.activities.AddCentralinaActivity"
            android:label="Aggiungi HUB" />
        <activity
            android:name="com.iot_application.iothink_unina.activities.MainActivity"
            android:label="Lista HUB"></activity>
    </application>

</manifest>